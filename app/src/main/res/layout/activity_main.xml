<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/set_prop_button"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="setSystemProp"
        android:text="@string/set_prop" />

    <Button
        android:id="@+id/remove_prop_button"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="removeSystemProp"
        android:text="@string/removeProp" />

    <Button
        android:id="@+id/get_prop_button"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        android:onClick="getSystemProp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/get_prop" />

    <TextView
        android:id="@+id/show_prop_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        android:text="System Prop" />

</LinearLayout>